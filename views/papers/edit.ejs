<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center">Edit Paper</h1>
    <div class="col-lg-6 offset-lg-3">
        <form action="/paper/<%= paper._id %>?_method=PUT" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" placeholder="Enter Name"
                    name="paper[title]" value="<%= paper.title %>" required>
                <div class="valid-feedback">
                    Looks Good!!
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add more images</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
                <div class="valid-feedback">
                    Looks Good!!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" placeholder="Enter description"
                    name="paper[description]" style="height: 160px;" required><%= paper.description %></textarea>
                <div class="valid-feedback">
                    Looks Good!!
                </div>
            </div>
            <div class="mb-3">
                <% paper.images.forEach(function(img, i){ %>
                    <div >
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="deleteImages[]" id="image-<%= i %>" value="<%= img.filename %>">
                            <label class="form-check-label" for="image-<%= i %>">Delete Image</label>
                        </div>
                    </div>
                <% }) %> 
            </div>
            <div class="mb-3">
                <button class="btn btn-info text-white">Update Paper</button>
            </div>
        </form>
        <a href="/papers/<%= paper._id %>">Back to All Papers</a>
    </div>
</div>