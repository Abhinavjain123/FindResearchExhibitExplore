<% layout('layouts/boilerplate') %>
<div class="container">
    <h1>All Seminars</h1>

    <% for( let seminar of seminars){ %>
        <div class="card mb-3">
            <div class="row">
                
                <div class="col-md-12">
                    <div class="card-body">
                        <h5 class="card-title"><%= seminar.title %></h5>
                        <p class="card-text"><small class="text-muted"><%= seminar.location %></small></p>
                        <p class="card-text"><%= seminar.speaker %></p>
                        <p class="card-text"><%= seminar.description %></p>
                        <a href="/seminars/<%= seminar._id %>" class="btn btn-primary">View <%=
                                seminar.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>
<script>
    const seminars = { features: <%- JSON.stringify(seminars) %>};
</script>
